#!/bin/bash

# remote から削除されたローカルにだけ有る remote ブランチの削除
printf "##############################################################################\n"
printf "## remote から削除されたローカルにだけ有る remote ブランチの削除\n"
printf "##############################################################################\n"
git fetch --prune
printf "\n"

# remote から削除されたローカルにだけ有る origin ブランチの削除
printf "##############################################################################\n"
printf "## remote から削除されたローカルにだけ有る origin ブランチの削除\n"
printf "##############################################################################\n"
git remote prune origin
printf "\n"

